#!/usr/bin/env bash
set -euo pipefail

# Node 24+ ships with an (experimental) built-in test runner + coverage reporting.
# We use it to keep the test suite fast and dependency-free.

node \
  --test \
  --experimental-test-coverage \
  --test-coverage-lines=100 \
  --test-coverage-functions=100 \
  --test-coverage-branches=100 \
  --test-coverage-include='src/lib/**/*.js'

